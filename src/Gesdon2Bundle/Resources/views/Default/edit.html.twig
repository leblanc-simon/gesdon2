{# src/Gesdon2Bundle/Resources/views/Default/edit.html.twig #}
{# Formulaire de modification général #}

{% extends '::base.html.twig' %}
{% form_theme edit_form 'form_table_layout.html.twig' %}
{% form_theme delete_form 'form_table_layout.html.twig' %}

{% block body -%}
    <h1>Modifier {{ entity }}</h1>

    {{ form(edit_form) }}

    <br>

<table class="record_actions">
    <tr>
        <td>
            <a href="{{ path('list',{'entity':entity}) }}">
                Retour à la liste
            </a>
        </td>
        <td>
            {{ form(delete_form) }}
        </td>
    </tr>
</table>
{% endblock %}
