{% extends '::base.html.twig' %}
{% form_theme edit_form 'form_table_layout.html.twig' %}
{% form_theme delete_form 'form_table_layout.html.twig' %}

{% block head %}
    <title>Modifier un adresse</title>
{% endblock %}


{% block body %}
    <h1>Modifier adresse</h1>

    {{ form(edit_form) }}

    <br>

<table class="record_actions">
    <tr>
        <td>
            <a href="{{ path('adresse_search') }}">
                Retour à la liste
            </a>
        </td>
        <td>
            {{ form(delete_form) }}
        </td>
    </tr>
</table>
{% endblock %}
