{# src/Gesdon2Bundle/Resources/views/Donateur/search.html.twig #}

{% extends '::base.html.twig' %}
{% form_theme donateur_form 'form_table_layout.html.twig' %}

{% block head %}

    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" >
            function donateurPost( $form, callback ){
                // Retrouver les valeurs du formulaire
                var values = {};
                $.each( $form.serializeArray(), function(i, field) {
                    values[field.name] = field.value;
                });
                // Envoyer les valeurs au contrôleur
                $.ajax({
                    type        : $form.attr( 'method' ),
                    url         : $form.attr( 'action' ),
                    data        : values,
                    success     : function(data) {
                        callback( data );
                        //vider la div et mettre à jour la div avec les données reçues
                        $("#donateur_table")
                                .empty()
                                .hide()
                                .append(data)
                                .fadeIn(100);
                    }
                });
            }

            $(document).ready(function( ) {
                var form = $('#donateur_form');
                $(form).submit(function (e) {
                    e.preventDefault();
                    donateurPost($(this), function callback(response) {
                    });
                    return false;
                });
                $('#donateur_search').removeAttr('disabled');

            });
        </script>
    {% endblock %}

    {% block stylesheets %}
        {{ parent() }}
        {% stylesheets 'css/table.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
        {% endstylesheets %}
    {% endblock %}

{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>Rechercher un donateur</h1>
    {{ form_start(donateur_form) }}
    {{ form_errors(donateur_form) }}
    {{ form(donateur_form) }}
    {{ form_end(donateur_form) }}
    <a href="{{ path('donateur_new') }}">Ajouter</a>

    <div id="donateur_table">
        {# charger le tableau ici #}
    </div>
{% endblock %}