{# src/Gesdon2Bundle/Resources/views/Don/new.html.twig #}
{# Formulaire de création général #}


{% form_theme form 'bootstrap_3_layout.html.twig' %}

<head>
    {% stylesheets 'bundles/gesdon2/js/jquery-ui/jquery-ui.min.css' filter='cssrewrite'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-2.1.3.min.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-ui/jquery-ui.min.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-ui/datepicker-fr.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/new.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <title>Créer un don</title>
</head>
<body>
{% block body -%}
    <h1>Créer un don</h1>

    <span></span>

    <div class="col-lg-12">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <fieldset>
            <legend><h3>Don</h3></legend>
            {{ form_row(form.date) }}
            {{ form_row(form.montant) }}
            {{ form_row(form.moyen) }}
            {{ form_row(form.moyenDesc) }}
            {{ form_row(form.recurrence) }}
            {{ form_row(form.dateFinRecurrence) }}
            {{ form_row(form.transacNum) }}
            {{ form_row(form.courriel) }}
        </fieldset>
        <fieldset>
            <legend><h3>Donateur</h3></legend>
            {{ form_row(form.adresse.donateur) }}
            <fieldset>
                <legend class="collapsible">Donateur existant</legend>
                <div class="content" id="donateur">
                    {{ render(controller('Gesdon2Bundle:Donateur:list')) }}
                </div>
            </fieldset>
        </fieldset>
        <fieldset>
            <legend><h3>Adresse</h3></legend>
            {{ form_row(form.adresse.adresse1) }}
            {{ form_row(form.adresse.adresse2) }}
            {{ form_row(form.adresse.codePostal) }}
            {{ form_row(form.adresse.ville) }}
            {{ form_row(form.adresse.pays) }}
            <fieldset>
                <legend class="collapsible">Adresse existante</legend>
                <div class="content" id="adresse">
                    {{ render(controller('Gesdon2Bundle:Adresse:list')) }}
                </div>
            </fieldset>
        </fieldset>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

<div class="record_actions">
    <a href="{{ path("don_list") }}">
        Retour à la liste
    </a>
</div>
{% endblock %}
</body>