{# src/Gesdon2Bundle/Resources/views/Don/new.html.twig #}
{# Formulaire de création général #}


{% form_theme form 'bootstrap_3_layout.html.twig' %}

<head>
    {% stylesheets 'bundles/gesdon2/js/jquery-ui/jquery-ui.min.css' filter='cssrewrite'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-2.1.3.min.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-ui/jquery-ui.min.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/jquery-ui/datepicker-fr.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@Gesdon2Bundle/Resources/public/js/new.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <title>Créer un don</title>
</head>
<body>
{% block body -%}
    <h1>Créer un don</h1>

    <div class="col-lg-12">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.date) }}
        {{ form_row(form.montant) }}
        {{ form_row(form.moyen) }}
        {{ form_row(form.moyenDesc) }}
        {{ form_row(form.recurrence) }}
        {{ form_row(form.dateFinRecurrence) }}
        {{ form_row(form.transacNum) }}
        {{ form_row(form.courriel) }}
        {# TODO remplacer par un formulaire ne tenant compte que de l'ID #}
        {# TODO afficher les autres informations sous forme de texte #}
        Donateur <input type="text" name="donateur" id="donateur">
        {{ form_row(form.adresse) }}

        {{ form_end(form) }}
    </div>

<div class="record_actions">
    <a href="{{ path("don_list") }}">
        Retour à la liste
    </a>
</div>
    <a data-toggle="modal" href="{{ path('donateur_list') }}" data-target="#myModal">donateur?</a>
    <div class="content" id="donateur" title="Selectionner un donateur">
{#        <iframe id="iframe"
                src="{{ path('donateur_list') }}"
                style="overflow:hidden;height:100%;width:100%"
                height="100%" width="100%">
        </iframe>#}
    </div>

    <div class="content" id="adresse" title="Selectionner une adresse">
{#        <iframe src="{{ path('adresse_list') }}"
                style="overflow:hidden;height:100%;width:100%"
                height="100%" width="100%">
        </iframe>#}
    </div>

{% endblock %}
</body>